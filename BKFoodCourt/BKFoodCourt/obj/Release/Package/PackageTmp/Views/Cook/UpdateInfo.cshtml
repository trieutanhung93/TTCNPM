
@{
    ViewBag.Title = "Cập nhật";
    Layout = "~/Views/Shared/_LayoutCook.cshtml";
}

@model BKFoodCourt.Models.UpdateModel
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-xl-4 order-xl-2">
            <p><img src="~/Assets/img/hcmut.jpg" alt="" class="img-fluid"></p>
            <p class="text-black">
                Address: <br> 268 Lý Thường Kiệt, Phường 14, Quận 10 <br> Hồ Chí Minh, Việt Nam <br> <br>
                Phone: <br> +(84) 123 456 <br> <br>
                Email: <br> <a href="mailto:info@bkfoodcourt.com">info@bkfoodcourt.com</a>
            </p>
        </div>
        <div class="col-xl-8 order-xl-1">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">Chỉnh sửa thông tin cá nhân</h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("UpdateInfoAction", "Cook"))
                    {
                        <h6 class="heading-small text-muted mb-4">Thông tin đầu bếp</h6>
                        <i>(Bỏ trống mục không thay đổi.)</i>

                        <div class="pl-lg-4">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label">Tên</label>
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @value = Model.Name.ToString() })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label">Email</label>
                                        @*<input class="form-control" value=@Model.Email disabled>*@
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @value = Model.Email, @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label">Mật khẩu hiện tại</label>
                                        @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control" })
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label">Mật khẩu mới</label>
                                        @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label">Nhập lại mật khẩu mới</label>
                                        @Html.PasswordFor(model => model.RetypePassword, new { @class = "form-control" })
                                    </div>
                                </div>
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                            </div>

                        </div>
                        
                        <input type="submit" class="btn btn-success" value="Hoàn tất">
                        <hr class="my-4" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>


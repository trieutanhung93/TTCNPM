                    </ul>
                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <div class="mb-4">
                        @RenderBody()
                    </div>
                    <!-- /.container-fluid -->
                </div>
                <!-- End of Main Content -->
                <!-- Footer -->
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; BK FoodCourt 2020</span>
                            <br /><br />
                            <span>268 Lý Thường Kiệt, Phường 14, Quận 10, Hồ Chí Minh, Việt Nam</span>
                            <br />
                            <span>Mail: <a href="mailto:info@bkfoodcourt.com">info@bkfoodcourt.com</a> - Phone: (+84) 123456</span>
                        </div>
                    </div>

                </footer>
                <!-- End of Footer -->
            </div>

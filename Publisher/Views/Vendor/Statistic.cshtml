
@{
    ViewBag.Title = "Thống kê";
    Layout = "~/Views/Shared/_LayoutVendor.cshtml";
}

@model BKFoodCourt.Models.StatisticModel

<h1 class="h3 mb-2 text-gray-800">Thống kê</h1>

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Trình Trạng hoạt động</h1>
    </div>
    <div class="row">
        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Số khách hàng đã đặt hàng</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.NumCustomerOrder</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Tasks Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Số đơn hàng đã được đặt</div>
                            <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@Model.NumOrder</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Tasks Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Số món ăn đã được đặt</div>
                            <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@Model.NumFoodOrder</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Các món ăn đã được đặt</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID Món ăn</th>
                        <th>Tên Món ăn</th>
                        <th>Số lượng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID Món ăn</th>
                        <th>Tên Món ăn</th>
                        <th>Số lượng</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.listFoodOrder)
                    {
                        <tr>
                            <th>@item.Key.ID</th>
                            <th>@item.Key.Name</th>
                            <th>@item.Value</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


